<h1 class="text-center">客户管理界面</h1>
<div class="form-row">
  <% if can? :manage, SaleCustomer %>
    <div>
      <%= link_to "新建", new_sale_customer_path %>
    </div>
  <% end %>
  <%= render "shard/search", action: :index %>
</div>
<table class="table table-hover table-active">
  <thead>
  <tr>
    <td>编号</td>
    <td>公司名</td>

  </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.name, sale_customer_path(customer) %></td>
    </tr>

  <% end %>
  </tbody>
</table>
<%= render 'shard/paginate', object: @customers %>







