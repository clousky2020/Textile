<% provide :button_text, "创建" %>
<% provide :title, "创建付款单" %>
<% provide :method, :post %>
<% provide :back_url, expense_index_path %>

<%= render 'shard/form', object: @expense, url: expense_index_path, type: "expense", type_2: "create" %>


<script>
    if (Cookies.get("expense_tour")) {
        var intro = introJs();
        intro.setOptions({
            skipLabel: "不要引导了",
            nextLabel: '下一步',
            prevLabel: '上一步',
            doneLabel: '完成',
            exitOnOverlayClick: false,
        });
        intro.onexit(function () {
            Cookies.remove("expense_tour");
        });
        intro.start().oncomplete(function () {
            Cookies.remove("expense_tour");
        });
    }
</script>