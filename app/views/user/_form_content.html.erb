<div class="form-group">
  <%= f.label :name, "用户名" %>
  <%= f.text_field :name,required: "required", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :email, "邮箱" %>
  <%= f.email_field :email,required: "required", class: "form-control" %>
</div>
<% if type_2 == "create" %>
  <div class="form-group">
    <%= f.label :password, "密码" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "确认密码" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="form-check">
    <%= f.label :is_lock, "是否锁住" %>
    <%= f.check_box :is_lock %>
  </div>
<% end %>

<% if can? :create, Role %>
  <div class="field">
    <%= f.label :roles, '角色', class: 'label' %>
    <p class="control">
      <%= f.collection_check_boxes :role_ids, Role.all, :id, :name do |m| %>
        <%= m.label class: 'checkbox' do %>
          <%= m.check_box class: 'checkbox' %>
          <%= m.text %>
        <% end %>
      <% end %>
    </p>
  </div>
<% end %>

