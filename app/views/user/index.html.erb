<div class="col-12 ">
  <h1 class="text-center">用户管理界面</h1>
    <div class="row">
  <div class="search ml-auto">
    <%= form_tag(user_index_path, method: :get) do %>
      <%= text_field_tag :search, '',placeholder:"搜索姓名", size: 20 %>
      <%= submit_tag('搜索', class: "btn btn-default") %>
    <% end %>
  </div>
  <div class="filer ">
    <% if request.filtered_parameters['order'] == "all" %>
      <%= link_to("在职人员", user_index_path, class: "btn btn-default") %>
    <% else %>
     <%= link_to("全部人员", user_index_path(:order => "all"), class: "btn btn-default") %>
    <% end %>
  </div>
    </div>
  <table class="table table-hover table-active">
    <thead>
    <tr>
      <td>工号</td>
      <td>姓名</td>
      <td>性别</td>
      <td>岗位</td>
      <td>状态</td>
      <td>操作</td>
    </tr>
    </thead>
    <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.work_id %></td>
        <td><%= user.name %></td>
        <td><%= user.gender %></td>
        <td><%= user.work_type %></td>
        <td><%= user.work_status %></td>
        <td><%= link_to "查看详情", user_path(user) %></td>
        <% if can? :manage, User %>
          <td>
            <%= link_to "重置密码", reset_password_reset_path(user) %>
          </td>
        <% end %>

      </tr>

    <% end %>
    </tbody>
  </table>

  <div class="pagination justify-content-center"><%= paginate @user %></div>

</div>




