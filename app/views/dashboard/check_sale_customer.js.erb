var head = $(".chart-container")
head.empty();


<%unless @sale_orders.blank? %>
head.append("<canvas id=\"check_sale_customer_chart\"></canvas>\n")
var ctx = $('#check_sale_customer_chart');
var myChart = new Chart(ctx, {
    type: "line",
    data: {
        labels: <%= raw @sale_orders.keys  %>,
        datasets: [
            {
                label: '销售金额曲线',
                data: <%= raw @sale_orders.values %>,
                borderColor: 'blue',
                borderWidth: 1,
            }
        ]
    }
});
<%else %>
head.append("<p>该时间段内没有找到符合要求的数据</p>");
<%end %>
