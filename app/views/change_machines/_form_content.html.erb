<div class="form-group">
  <%= f.label :change_person, "改机人姓名" %>
  <%= f.text_field :change_person, required: "required", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :contacts, "联系方式" %>
  <%= f.text_field :contacts, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :machine_id, "机器编号" %>
  <%= f.number_field :machine_id, required: "required", min: 0, max: 27, required: "required", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :machine_type, "机器的针筒类型" %>
  <%= f.text_field :machine_type, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :change_to_specification, "要改成的型号" %>
  <%= f.text_field :change_to_specification, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :price, "费用" %>
  <%= f.number_field :price, required: "required", min: 0, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :change_date, "改机日期" %>
  <%= f.date_field :change_date, value: f.object.change_date || Date.today.to_s(:db), class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :remark, "备注" %>
  <%= f.text_area :remark, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :is_settle, "是否结清？" %>
  <%= f.check_box :is_settle %>
</div>

