
<% provide :button_text, "创建" %>
<% provide :title, "新的改机信息" %>
<% provide :method, :post %>
<% provide :back_url, change_machines_url %>

<%= render 'shard/form', object: @change_machine, url: change_machines_url, type: "change_machine", type_2: "create" %>
<script>
    if (Cookies.get("change_machine_tour")) {
        var intro = introJs();
        intro.setOptions({
            skipLabel: "不要引导了",
            nextLabel: '下一步',
            prevLabel: '上一步',
            doneLabel: '完成',
            exitOnOverlayClick: false,
        });
        intro.onexit(function () {
            Cookies.remove("change_machine_tour");
        });
        intro.start().oncomplete(function () {
            Cookies.remove("change_machine_tour");
        });
    }
</script>