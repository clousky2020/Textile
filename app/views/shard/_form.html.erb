<h2 class="text-center"><%= yield(:title) %></h2>
<%#= render "shard/errors", object: object %>
<div class="offset-md-3 col-md-6">
  <%= form_for(object, url: url, method: yield(:method)) do |f| %>
    <% if type == "sale_customer" %>
      <%= render 'sale_customer/form_content', f: f, type_2: type_2, object: object %>
    <% elsif type == "purchase_supplier" %>
      <%= render 'purchase_supplier/form_content', f: f, type_2: type_2, object: object %>
    <% elsif type == "proceed" %>
      <%= render 'proceed/form_content', f: f, type_2: type_2, object: object %>
  <% elsif type == "expense" %>
      <%= render 'expense/form_content', f: f, type_2: type_2, object: object %>
   <% elsif type == "user" %>
      <%= render 'user/form_content', f: f, type_2: type_2, object: object %>
    <% elsif type == "repo" %>
      <%= render 'repo/form_content', f: f, type_2: type_2, object: object %>
    <% elsif type == "employee" %>
      <%= render 'employee/form_content', f: f, type_2: type_2, object: object %>
    <% elsif type == "purchase_order" %>
      <%= render 'purchase_order/form_content', f: f, type_2: type_2, object: object %>
    <% elsif type == "sale_order" %>
      <%= render 'sale_order/form_content', f: f, type_2: type_2, object: object %>
    <% elsif type == "material" %>
      <%= render 'material/form_content', f: f, type_2: type_2, object: object %>
    <% elsif type == "product" %>
      <%= render 'product/form_content', f: f, type_2: type_2, object: object %>
    <% elsif type == "change_machine" %>
      <%= render 'change_machines/form_content', f: f, type_2: type_2, object: object %>
    <% end %>
    <div class="form-group">
      <span data-hint="上面必须的内容都写好了？那就点击这里吧。哪里没有填好会给你提示的~" data-hintPosition="top-left">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %></span>
      <span  data-hint="不想写单子了，退出。注意：前面填好的内容不会保存哦~" data-hintPosition="top-left">
      <%= link_to "取消", yield(:back_url), class: "btn btn-default" %></span>
    </div>

  <% end %>

</div>