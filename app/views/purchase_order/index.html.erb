<% provide :index_title, "采购订单管理界面" %>
<% provide :manage_object, PurchaseOrder %>
<% provide :new_url, new_purchase_order_path %>

<%= render 'shard/index_header', page: "purchase_order" %>

<table class="table table-hover table-active">
  <thead>
  <tr>
    <td>订单号</td>
    <td>供应商</td>
    <td>品名</td>
    <td>批号</td>
    <% if can? :destroy, PurchaseOrder %>
      <td>作废</td>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @purchase_orders.each do |purchase_order| %>
    <tr>
      <td><%= link_to purchase_order.order_id, purchase_order_path(purchase_order) %></td>
      <td><%= link_to purchase_order.purchase_supplier.name, purchase_supplier_path(purchase_order.purchase_supplier) %></td>
      <td><%= purchase_order.name %></td>
      <td><%= purchase_order.batch_number %></td>
      <% if can? :destroy, PurchaseOrder %>
        <td>
          <%= link_to "作废", purchase_order_path(purchase_order), method: :delete, data: {confirm: "确定删除吗？"} %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'shard/paginate', object: @purchase_orders %>







