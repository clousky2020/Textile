<% provide :button_text, "创建" %>
<% provide :title, "创建新的采购订单" %>
<% provide :method, :post %>
<% provide :back_url, purchase_order_index_path %>

<%= render 'shard/form', object: @purchase_order, url: purchase_order_index_path, type: "purchase_order", type_2: "create", method: :post %>


<script>
    if (Cookies.get("purchase_order_tour")) {
        var intro = introJs();
        intro.setOptions({
            skipLabel: "不要引导了",
            nextLabel: '下一步',
            prevLabel: '上一步',
            doneLabel: '完成',
            exitOnOverlayClick: false,
        });
        intro.onexit(function () {
            Cookies.remove("purchase_order_tour");
        });
        intro.start().oncomplete(function () {
            Cookies.remove("purchase_order_tour");
        });
    }
</script>