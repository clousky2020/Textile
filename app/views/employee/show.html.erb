<% provide :title, "员工信息详情" %>
<% provide :edit_url, edit_employee_path(@employee) %>
<% provide :back_url, employee_index_path %>
<div class="text-center">
  <h2><%= yield(:title) %></h2>
  <%= render 'employee/show_content', object: @employee, type: "employee" %>
  <div>

    <% if can? :update, Employee %>
      <%= link_to "编辑", yield(:edit_url), class: "btn btn-primary edit-link" %>
    <% end %>
    <%= link_to "返回主页", yield(:back_url), class: "btn btn-primary" %>
  </div>
</div>
