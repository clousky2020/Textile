<div class="section">
  <div class="container">
    <p content="content">
      <%= link_to '创建新的角色', new_role_path, class: 'button is-primary' %>
    </p>
    <table class="table is-fullwidth">
      <thead>
      <tr>
        <th>角色ID</th>
        <th>角色名</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.id %></td>
          <td><%= role.name %></td>
          <td>
            <%= link_to '编辑', edit_role_path(role) %> |
            <%= link_to '删除', role, method: :delete, data: {confirm: '确定删除?'} %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
