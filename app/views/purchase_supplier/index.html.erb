<% provide :index_title, "供应商管理界面" %>
<% provide :manage_object, PurchaseSupplier %>
<% provide :new_url, new_purchase_supplier_path %>

<%= render 'shard/index_header',page:"purchase_supplier" %>

<table class="table table-hover table-active">
  <thead>
  <tr>
    <td>编号</td>
    <td>公司名</td>
    <td>查看</td>
    <% if can? :manage, PurchaseSupplier %>
      <td>删除</td>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @suppliers.each do |supplier| %>
    <tr>
      <td><%= supplier.id %></td>
      <td><%= supplier.name %></td>
      <td><%= link_to "详情", purchase_supplier_path(supplier) %></td>
      <% if can? :manage, PurchaseSupplier %>
        <td>
          <%= link_to "删除", purchase_supplier_path(supplier), method: :delete, data: {confirm: "确定删除吗？"} %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<%=render 'shard/paginate',object:@suppliers %>







