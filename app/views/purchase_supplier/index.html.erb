<% provide :index_title, "供应商管理界面" %>
<% provide :manage_object, PurchaseSupplier %>
<% provide :new_url, new_purchase_supplier_path %>

<%= render 'shard/index_header', page: "purchase_supplier" %>

<table class="table table-hover table-active">
  <thead>
  <tr>
    <td>编号</td>
    <td>公司名</td>

  </tr>
  </thead>
  <tbody>
  <% @suppliers.each do |supplier| %>
    <tr>
      <td><%= supplier.id %></td>
      <td><%= link_to supplier.name, purchase_supplier_path(supplier) %></td>

    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'shard/paginate', object: @suppliers %>







