<div class="form-inline">
  <%= f.label :name, "公司名" %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-inline">
  <%= f.label :contacts, "联系人姓名" %>
  <%= f.text_field :contacts, class: "form-control" %>
</div>

<div class="form-inline">
  <%= f.label :phone, "联系号码" %>
  <%= f.text_field :phone, class: "form-control" %>
</div>
<div class="form-inline">
  <%= f.label :address, "地址" %>
  <%= f.text_field :address, class: "form-control" %>
</div>
<div class="form-inline">
  <%= f.label :description, "描述" %>
  <%= f.text_field :description, class: "form-control" %>
</div>
<div class="form-inline">
  <%= f.label :check_money, "清算金额" %>
  <a class="far fa-question-circle" data-toggle="tooltip" title="设定和供应商的初始未付货款"> </a>
  <%= f.number_field :check_money, min: 0, step: 0.01, class: "form-control" %>
</div>
<div class="form-inline">
  <%= f.label :check_money_time, "清算时间" %>
  <a class="far fa-question-circle" data-toggle="tooltip" title="在此时间前记录的订单和付款单将不会参与总值计算"> </a>
  <%= f.datetime_field :check_money_time, value: Time.current.strftime("%Y-%m-%dT%H:%M"), class: "form-control" %>
</div>

